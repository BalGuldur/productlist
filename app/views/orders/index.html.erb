<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Manager</th>
      <th>Numbill</th>
      <th>Ответственный ОЗ</th>
      <th>Addrate</th>
      <th>Datetimedone</th>
      <th>Margin</th>
      <th>Statereser</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr bgcolor="<%= order.statereserv_id!=nil ? order.statereserv.color : "white" %>">
        <td><%= order.manager_id!=nil ? order.manager.fio : "" %></td>
        <td><%= order.numbill %></td>
        <%# убрал purchaser т.к. это будет уже в отгрузке не забыть удалить из модели%>
        <td><%= order.doner_id!=nil ? order.doner.fio : "" %></td>
        <%# убрал shipprice т.к. это будет в кажой позиции %>
        <td><%= order.addrate %></td>
        <td><%= order.datetimedone %></td>
        <td><%= order.margin %></td>
        <td><%= order.statereserv_id!=nil ? order.statereserv.status : "" %></td>
        <td><%= order.comments %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

