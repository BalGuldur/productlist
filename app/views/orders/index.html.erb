<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Manager</th>
      <th>Numbill</th>
      <th>Purchaser</th>
      <th>Shipprice</th>
      <th>Addrate</th>
      <th>Datetimedone</th>
      <th>Margin</th>
      <th>Statereser</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.manager_id %></td>
        <td><%= order.numbill %></td>
        <td><%= order.purchaser_id %></td>
        <td><%= order.shipprice %></td>
        <td><%= order.addrate %></td>
        <td><%= order.datetimedone %></td>
        <td><%= order.margin %></td>
        <td><%= order.statereser_id %></td>
        <td><%= order.comments %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

